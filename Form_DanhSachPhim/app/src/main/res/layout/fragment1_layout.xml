<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#070707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:iconifiedByDefault="false"
                android:queryHint="@string/search_hint"
                android:clickable="true"
                android:focusable="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton22"
                    style="@android:style/Widget.Holo.Light.ImageButton"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#070707"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/download__1_" />

                <ImageButton
                    android:id="@+id/imageButton21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0C0C0C"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/download__2_" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ròm"
                    android:textAlignment="center"
                    android:textColor="#F5F5F5" />

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thể loại: Chính Kịch"
                    android:textColor="#FDFAFA" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tí Hon Hậu Đậu"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Thể loại: Hoạt Hình"
                    android:textAlignment="center"
                    android:textColor="#FBFAFA" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton19"
                    android:layout_width="439dp"
                    android:layout_height="282dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/rsz_alone____i_d_ch_x_c_s_ng___official_poster" />

                <ImageButton
                    android:id="@+id/imageButton20"
                    android:layout_width="442dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/af_poster1_16028399752142102110498" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đại Dịch Xác Sống"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Thể loại: Kinh Dị"
                    android:textAlignment="center"
                    android:textColor="#FFFDFC" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Tay Đấm Mỹ"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="82dp"
                    android:layout_height="57dp"
                    android:layout_weight="1"
                    android:text="Thể loại: Hành Động"
                    android:textColor="#FDFCFC" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton17"
                    android:layout_width="160dp"
                    android:layout_height="307dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/tiec_trang_mau_1_4449_1603284060" />

                <ImageButton
                    android:id="@+id/imageButton18"
                    android:layout_width="163dp"
                    android:layout_height="307dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/download" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tiệc Trăng Máu"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="53dp"
                    android:layout_height="68dp"
                    android:layout_weight="1"
                    android:text="Thể loại: Hài"
                    android:textAlignment="center"
                    android:textColor="#FDFBFB" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cục Nợ Hóa Cục Cưng"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_weight="1"
                    android:text="Thể loại: Chính Kịch"
                    android:textAlignment="center"
                    android:textColor="#FFFEFE" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>